@page
@model ReservaWebApplication.Pages.HotelPages.CheckoutModel
@{
} 
<partial name="_StatusMessagePartial" model="@Model.StatusMessage" />
<form method="post">
<h1 class="text-center mb-3">Checkout </h1>
<div class="row mx-auto col-12 col-lg-9 mb-2">
	<div class="col-5">
		<div class="card w-100 d-flex">
			<img class="img-fluid overflow-hidden" src="https://www.checkatrade.com/blog/wp-content/uploads/2021/04/Feature-cost-to-build-a-hotel.jpg" class="card-img-top" alt="hotel">
			<div class="card-body">
				<h5 class="card-title">@Model.hotel.Name</h5>
				<span>Rating:     </span><span class="badge bg-primary">8</span>

				<p class="card-text m-0">Check-in: @Model.reservation.DateRange.Start.ToString("dddd, MMMM dd")</p>
				<p class="card-text m-0">Check-out: @Model.reservation.DateRange.End.ToString("dddd, MMMM dd")</p>
			</div>

		</div>
	</div>
	<div class="col-7">
		<div class="card w-100 d-flex h-100">
			<div class="card-body d-flex flex-column">
				<h2 class="card-title">Price details</h2>
					<div class="row mt-auto border-bottom border-1 border-dark ">
					<div class="col">
						<p>@Model.reservation.GetRoomCount() x @Model.reservation.GetAmountOfNights()</p>
						<p>Reserva fees</p>
						
					</div>
					<div class="col text-right">
						<p>@Model.PriceExcl</p>
						<p>@RoomPriceCalculator.CalculateFees(Model.PriceExcl).ToString("€0.00")</p>
					</div>
					</div>
					<div class="row mb-5">
					<div class="col">
						<p>Total price</p>
					</div>
					<div class="col text-right">
							<p>@RoomPriceCalculator.GetTotalPriceIncl(Model.PriceExcl).ToString("€0.00")</p>
					</div>
				</div>
				
			</div>
		</div>
	</div>
</div>



<div class="row justify-content-end">
	<div class="col-6 mt-4">
		<div class=" mx-auto">
			<div class=" text-center">
					<button type="submit" class="btn btn-primary ms-auto">Complete booking <i class="fas fa-chevron-right"></i></button>
			</div>
			
		</div>
	</div>
</div>
</form>

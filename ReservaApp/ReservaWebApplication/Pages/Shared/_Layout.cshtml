<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reserva</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReservaWebApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" type="text/css">
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fs-2" asp-area="" asp-page="/Index">Reserva</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav justify-content-end flex-grow-1">
                        <li class="nav-item mx-2 p-1 text-center  rounded-pill ">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item mx-2 p-1 text-center  rounded-pill ">
                            <a class="nav-link text-light" asp-area="" asp-page="/HotelPages/HotelsView">Hotel</a>
                        </li>
                        <li class="nav-item mx-2 p-1 text-center  rounded-pill ">
                            <a class="nav-link text-light" asp-area="" asp-page="/Privacy">Activities</a>
                        </li>
                        <li class="nav-item mx-2 p-1 text-center  rounded-pill ">
                            <a class="nav-link text-light" asp-area="" asp-page="/Privacy">Redeem points</a>
                        </li>
                        <li class="nav-item mx-2 p-1 text-center  rounded-pill ">
                            @if(User.FindFirst("id")!= null)
                            {
                                <a class="nav-link text-light" asp-area="" asp-page="/AccountPages/AccountView">Account</a>
                            }
                            else
                            {
                                <a class="nav-link text-light" asp-area="" asp-page="/AccountPages/Login">Login</a>
                            }

                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Reserva - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>